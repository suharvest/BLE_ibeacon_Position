/* index.wxss */
page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 头部样式 */
.header {
  width: 100%;
  background-color: #2196F3;
  color: white;
  padding: 15px 0;
  text-align: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  margin-top: 5px;
  opacity: 0.8;
}

/* 地图容器样式 */
.map-container {
  flex: 1;
  width: 100%;
  position: relative;
  background-color: #ffffff;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-canvas {
  width: 100%;
  height: 100%;
}

.map-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(245, 245, 245, 0.9);
  text-align: center;
  padding: 20px;
}

.map-placeholder text {
  font-size: 16px;
  color: #666666;
  margin-bottom: 15px;
}

.config-btn {
  background-color: #2196F3;
  color: white;
  font-size: 14px;
  padding: 6px 15px;
  border-radius: 20px;
  margin-top: 10px;
}

.error-message {
  position: absolute;
  bottom: 10px;
  left: 10px;
  right: 10px;
  background-color: rgba(255, 80, 80, 0.9);
  color: white;
  padding: 8px 15px;
  border-radius: 5px;
  font-size: 12px;
  text-align: center;
}

/* 控制区域样式 */
.controls {
  width: 100%;
  background-color: white;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #eeeeee;
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.05);
}

.locate-btn {
  width: 80% !important;
  font-size: 16px;
  border-radius: 25px;
  margin-bottom: 10px;
}

.start {
  background-color: #4CAF50;
  color: white;
}

.stop {
  background-color: #F44336;
  color: white;
}

.locate-btn[disabled] {
  background-color: #cccccc !important;
  color: #888888 !important;
}

/* 蓝牙状态样式 */
.bluetooth-status {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin-top: 10px;
  width: 100%;
  padding: 5px 0;
  height: 24px;
  line-height: 24px;
}

.status-text {
  color: #666666;
  margin-right: 5px;
  display: inline-block;
  vertical-align: middle;
}

.status-value {
  font-weight: bold;
  padding: 0 3px;
  display: inline-block;
  vertical-align: middle;
}

.available {
  color: #4CAF50;
}

.unavailable {
  color: #F44336;
}

/* 调试信息区域样式 */
.debug-container {
  width: 100%;
  background-color: #f0f0f0;
  border-top: 1px solid #dddddd;
}

.debug-header {
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #e0e0e0;
  font-size: 14px;
  color: #555555;
  font-weight: bold;
}

.toggle-icon {
  font-size: 12px;
  color: #666666;
}

.debug-content {
  padding: 10px 15px;
  max-height: 200px;
  overflow-y: auto;
}

.debug-section {
  margin-bottom: 10px;
}

.debug-item {
  display: flex;
  margin-bottom: 5px;
  font-size: 12px;
}

.label {
  color: #666666;
  width: 100px;
}

.value {
  color: #333333;
  font-weight: bold;
}

.section-title {
  font-size: 12px;
  color: #666666;
  margin-bottom: 5px;
  display: block;
}

.beacon-details {
  margin-top: 10px;
}

.beacon-list {
  max-height: 150px;
  overflow-y: auto;
}

.beacon-item {
  background-color: white;
  border-radius: 5px;
  padding: 8px 10px;
  margin-bottom: 5px;
  font-size: 12px;
}

.beacon-name {
  font-weight: bold;
  margin-bottom: 3px;
  color: #2196F3;
  font-size: 13px;
}

.beacon-info {
  color: #666666;
  margin-top: 2px;
  display: block;
}

/* 底部导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50px;
  background-color: white;
  border-top: 1px solid #eeeeee;
  position: relative;
  z-index: 100;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
}

.nav-icon {
  font-size: 20px;
  margin-bottom: 2px;
}

.nav-text {
  font-size: 12px;
  color: #666666;
}

.nav-item.active {
  color: #2196F3;
}

.nav-item.active .nav-text {
  color: #2196F3;
} 