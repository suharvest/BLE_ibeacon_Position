/**
 * 全局样式文件
 */

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f7f7f7;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

/* 全局按钮样式 */
button {
  border-radius: 4px;
  font-size: 14px;
  margin: 8px 0;
}

/* 清除默认按钮样式 */
button::after {
  border: none;
}

/* 禁用状态 */
.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 容器通用样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  box-sizing: border-box;
}

/* 文本溢出处理 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
